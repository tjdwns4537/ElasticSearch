{
  "settings": {
    "analysis": {
      "analyzer": {
        "sentiment_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "sentiment"
          ]
        }
      },
      "filter": {
        "sentiment": {
          "type": "sentiment",
          "language": "english"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "content": {
        "type": "text",
        "analyzer": "sentiment_analyzer"
      }
    }
  }
}
